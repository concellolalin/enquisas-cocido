{% extends 'base.html.twig' %}

{% block title %}Opción{% endblock %}

{% block pagetitle %}Opción{% endblock %}

{% block body %}

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opcion.id }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ opcion.valor }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ opcion.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ opcion.height }}</td>
            </tr>
            <tr>
                <th>X</th>
                <td>{{ opcion.x }}</td>
            </tr>
            <tr>
                <th>Y</th>
                <td>{{ opcion.y }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('opcion_index') }}" class="btn btn-primary">Listado</a>
        </li>
        <li>
          <a href="{{ path('opcion_new') }}" class="btn btn-primary">Crear nova opción</a>
        </li>
        <li>
            <a href="{{ path('opcion_edit', { 'id': opcion.id }) }}" class="btn btn-warning">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
